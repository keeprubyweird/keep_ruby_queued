<p>
  <% if @queued_user.confirmed %>
    <h3>Place in line: <%= @queued_user.place_in_line %></h3>
    <p>Phone number confirmed</p>

  <% else %>
    <h3>Pending phone number confirmation, check your text messages</h3>
  <% end %>
</p>

<p>
  <strong>Name:</strong>
  <%= @queued_user.name %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @queued_user.number %>
</p>



<%= button_to "Re-send confirmation text", resend_text_path(id: @queued_user.id, confirm_token: @queued_user.confirm_token) %>

<%= link_to 'Edit', edit_queued_user_path(id: @queued_user.id, confirm_token: @queued_user.confirm_token) %>
